<Window x:Class="StreetviewDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="402.8" Width="701.8">
    <DockPanel LastChildFill="True" >
        <Border Background="LightGray" BorderBrush="Black" BorderThickness="1" DockPanel.Dock="Bottom" Name="BottomPanel">
            <WrapPanel>
                <StackPanel Margin="1,3,3,3">
                    <Button Name="ZoomIn" Content="+" Click="ZoomIn_Click"/>
                    <Label Name ="LabelZoomLevel" Content="3"/>
                    <Button Name="ZoomOut" Content="-" Click="ZoomOut_Click"/>
                </StackPanel>
                <StackPanel>
                    <WrapPanel Margin="1,3,3,3">
                        <TextBox x:Name="panoIdTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="28hi5tiRI9Sl6xylktw2TA" VerticalAlignment="Top" Width="170" TextChanged="TextBox_TextChanged_1" />
                        <Button Content="Grab" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Button_Click" />
                    </WrapPanel>

                    <WrapPanel Margin="1,1,1,1">
                        <Label Name="locationLabel" Content="Location"/>
                    </WrapPanel>
                </StackPanel>
                <StackPanel >
                    <WrapPanel Margin="5,5,5,5" x:Name="thumbnails">

                    </WrapPanel>
                </StackPanel>
            </WrapPanel>
        </Border>
        <Border Background="Black" BorderBrush="Black" BorderThickness="1" DockPanel.Dock="Top">
            <Image x:Name="mainImage" Margin="5,5,5,5" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        </Border>
    </DockPanel>
</Window>
