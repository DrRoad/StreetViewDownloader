<Window x:Class="StreetviewDownloader.OpenDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StreetviewDownloader"
        mc:Ignorable="d"
        Title="Load from Streetview URL" Height="150" Width="500">
    <StackPanel>
        <Label Content="Paste the StreetView URL here:"/>
        <TextBox x:Name="urlInput" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="470" Margin="10,1,10,10"/>
        <WrapPanel Margin="10,1,10,10" >

            <Button Content="  Load URL  " Click="Button_Click"/>
        </WrapPanel>

    </StackPanel>
    
</Window>
